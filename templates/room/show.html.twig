{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ room.capacity }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>
                {% for image in room.images %}
                    <img src="{{ asset(image.path) }}" width="60" alt="">
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_room_index') }}" class="btn bg-info text-white mb-2 mt-2">back to list</a>

    <a href="{{ path('app_room_edit', {'id': room.id}) }}" class="btn bg-warning text-white mb-2 mt-2">edit</a>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}
